# Local Development Environment Configuration
# Copy this file to .env and update with your local values

# Database Configuration (Local PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=loglineos
DB_USER=loglineos
DB_PASSWORD=loglineos_dev_password
DB_SSL_MODE=disable

# Redis Configuration (Local)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# AWS Configuration (for local testing with LocalStack)
# Uncomment when using LocalStack
# AWS_ENDPOINT_URL=http://localhost:4566
# AWS_ACCESS_KEY_ID=test
# AWS_SECRET_ACCESS_KEY=test
# AWS_DEFAULT_REGION=us-east-1

# AWS Configuration (for real AWS services)
# Configure using 'aws configure' or set here
# AWS_PROFILE=default
# AWS_REGION=us-east-1

# Application Configuration
ENVIRONMENT=local
LOG_LEVEL=debug

# Lambda Function Configuration (for local testing)
LAMBDA_TIMEOUT=30
LAMBDA_MEMORY=512

# API Configuration
API_PORT=3000
API_HOST=0.0.0.0

# Feature Flags
ENABLE_AUTHENTICATION=false
ENABLE_TRACING=false
ENABLE_METRICS=false

# Testing Configuration
TEST_DB_NAME=loglineos_test
